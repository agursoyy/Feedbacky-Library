{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*", "assets/*", "config/*", "tests/*", "stories/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "typedocOptions": {
    "out": "doc",
    "ignoreCompilerErrors": true
  },
  "include": ["./src/**/*", "./assets/**/*", "./tests/**/*", "./*.js"],
  "exclude": ["node_modules/**/*"]
}
